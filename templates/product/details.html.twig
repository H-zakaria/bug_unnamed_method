{% extends 'base.html.twig' %} {% block title %}{{ product.name }}{% endblock %}
{% block body %}
<div class="table_wrap">
  <table>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>weight</th>
      <th>quantity</th>
      <th>selling_success</th>
      <th>category</th>
    </tr>
    <tr>
      <td>{{ product.id }}</td>
      <td>{{ product.name }}</td>
      <td>
        {% if product.weight == null %} unknown {% else %}
        {{ product.weight }}
        {% endif %}
      </td>
      <td>{{ product.quantity }}</td>
      <td>
        {% if product.sellingSuccess == true %} yes {% elseif
        product.sellingSuccess == null %} unknown {% else %} no {% endif %}
      </td>
      <td>{{ product.category.name }}</td>
    </tr>
  </table>
</div>
{% endblock %}
